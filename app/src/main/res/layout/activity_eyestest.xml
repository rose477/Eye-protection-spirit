<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2_color"
    tools:context="com.hy.hyspirit.Activity_eyestest">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tb_actionPadding="10dp"
        app:tb_barHeight="65dp"
        app:tb_leftImageResource="@mipmap/back"
        app:tb_leftText="返回"
        app:tb_sideTextPadding="20dp"
        app:tb_titleText="眼部检测"
        app:tb_useThemeColor="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@id/titleBar">

        <ImageView
            android:id="@+id/shadowImageView2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/semang_selector"
            app:layout_constraintTop_toTopOf="@id/constraintLayout" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="色盲测试"
            android:textColor="@drawable/style_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/shadowImageView2"
            app:layout_constraintRight_toRightOf="@id/shadowImageView2"
            app:layout_constraintTop_toBottomOf="@+id/shadowImageView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/buttonView"
        style="@style/ButtonView.Green"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="开始测试"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
        app:layout_constraintRight_toRightOf="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar">

        <ImageView
            android:id="@+id/shadowImageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/shili_selector"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视力测试"
            android:textColor="@drawable/style_text"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/shadowImageView"
            app:layout_constraintRight_toRightOf="@id/shadowImageView"
            app:layout_constraintTop_toBottomOf="@+id/shadowImageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/buttonView2"
        style="@style/ButtonView.Green"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="开始测试"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/constraintLayout2"
        app:layout_constraintRight_toRightOf="@id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout2" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/titleBar">

        <ImageView
            android:id="@+id/shadowImageView3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/sanguang_selector"


            app:layout_constraintTop_toTopOf="@id/constraintLayout3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="散光测试"
            android:textColor="@drawable/style_text"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/shadowImageView3"
            app:layout_constraintRight_toRightOf="@id/shadowImageView3"
            app:layout_constraintTop_toBottomOf="@+id/shadowImageView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/buttonView3"
        style="@style/ButtonView.Green"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="开始测试"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/constraintLayout3"
        app:layout_constraintRight_toRightOf="@id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout3" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>